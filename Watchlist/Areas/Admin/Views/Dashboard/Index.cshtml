@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="home-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Titre principal -->
            <div class="col-12 text-center mb-4">
                <h2 class="fw-bold">Bienvenue dans l'administration</h2>
                <p class="text-muted">Gérez facilement les utilisateurs et les films depuis cet espace.</p>
            </div>

            <!-- Cartes d'options -->
            <div class="col-md-5">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <h5 class="card-title fw-bold">Gestion des utilisateurs</h5>
                        <p class="card-text text-muted">Ajoutez, modifiez ou supprimez des utilisateurs.</p>
                        <a asp-area="Admin" asp-controller="Utilisateurs" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-user-cog"></i> Accéder
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body text-center">
                        <i class="fas fa-film fa-3x text-danger mb-3"></i>
                        <h5 class="card-title fw-bold">Gestion des films</h5>
                        <p class="card-text text-muted">Ajoutez, modifiez ou supprimez des films.</p>
                        <a asp-area="Admin" asp-controller="Films" asp-action="Index" class="btn btn-danger">
                            <i class="fas fa-video"></i> Accéder
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
