@model Watchlist.Models.FilmImageViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Ajouter un Film</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <!-- Title -->
                    <div class="form-group mb-3">
                        <label asp-for="Titre" class="control-label">Titre</label>
                        <input asp-for="Titre" class="form-control" placeholder="Entrez le titre du film" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>

                    <!-- Year -->
                    <div class="form-group mb-3">
                        <label asp-for="Annee" class="control-label">Année de sortie</label>
                        <input asp-for="Annee" class="form-control" placeholder="Entrez l'année du film" />
                        <span asp-validation-for="Annee" class="text-danger"></span>
                    </div>

                    <!-- Author -->
                    <div class="form-group mb-3">
                        <label asp-for="Autheur" class="control-label">Auteur</label>
                        <input asp-for="Autheur" class="form-control" placeholder="Entrez l'auteur du film" />
                        <span asp-validation-for="Autheur" class="text-danger"></span>
                    </div>

                    <!-- Duration -->
                    <div class="form-group mb-3">
                        <label asp-for="Durée" class="control-label">Durée (en minutes)</label>
                        <input asp-for="Durée" class="form-control" placeholder="Durée du film" />
                        <span asp-validation-for="Durée" class="text-danger"></span>
                    </div>

                    <!-- Image Cover -->
                    <div class="form-group mb-3">
                        <label asp-for="CouvertureImage" class="control-label">Ajouter une image de couverture</label>
                        <input asp-for="CouvertureImage" type="file" class="form-control" />
                        <span asp-validation-for="CouvertureImage" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Créer" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste des films</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
