@model Watchlist.Models.FilmImageViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Modifier le Film</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="IdFilm" />

            <div class="card shadow-sm mb-4">
                <div class="card-body">

                    <!-- Title -->
                    <div class="form-group mb-3">
                        <label asp-for="Titre" class="control-label">Titre du Film</label>
                        <input asp-for="Titre" class="form-control" placeholder="Entrez le titre du film" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>

                    <!-- Year -->
                    <div class="form-group mb-3">
                        <label asp-for="Annee" class="control-label">Année de sortie</label>
                        <input asp-for="Annee" class="form-control" placeholder="Entrez l'année de sortie" />
                        <span asp-validation-for="Annee" class="text-danger"></span>
                    </div>

                    <!-- Author -->
                    <div class="form-group mb-3">
                        <label asp-for="Autheur" class="control-label">Auteur</label>
                        <input asp-for="Autheur" class="form-control" placeholder="Entrez l'auteur du film" />
                        <span asp-validation-for="Autheur" class="text-danger"></span>
                    </div>

                    <!-- Duration -->
                    <div class="form-group mb-3">
                        <label asp-for="Durée" class="control-label">Durée (en minutes)</label>
                        <input asp-for="Durée" class="form-control" placeholder="Durée du film en minutes" />
                        <span asp-validation-for="Durée" class="text-danger"></span>
                    </div>

                    <!-- Current Cover -->
                    <div class="form-group mb-3">
                        <label class="control-label">Image de couverture actuelle</label>
                        <div class="mb-2">
                            <img src="@Model.CouvertureUrl" alt="Cover Image" style="width: 150px; height: auto;" />
                        </div>
                    </div>

                    <!-- Upload New Cover -->
                    <div class="form-group mb-3">
                        <label asp-for="CouvertureImage" class="control-label">Télécharger une nouvelle image de couverture</label>
                        <input asp-for="CouvertureImage" type="file" class="form-control" />
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste des films</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
