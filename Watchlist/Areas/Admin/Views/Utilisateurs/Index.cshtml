@model IEnumerable<Watchlist.Data.Utilisateur>

@{
    ViewData["Title"] = "Liste des utilisateurs";
}

<h1>Liste des utilisateurs</h1>

<div class="container-md">
	<div class="row">
		<div class="d-flex justify-content-between align-items-center infos-list-section my-3">
			<span class="font-weight-bold">Weekly Tasks</span>
			<div class="d-flex flex-row">
				<button class="btn btn-primary mr-2 py-2 active">Active</button>
				<button class="btn btn-primary new py-2"><a asp-action="CreateAdmin" class="text-decoration-none" style="color: unset;"><i class="fa fa-plus"></i> Nouveau</a></button>
			</div>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Email</th>
				<th>Nom d'utilisateur</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.Email</td>
					<td>@user.UserName</td>
					<td>
						<a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Supprimer</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

