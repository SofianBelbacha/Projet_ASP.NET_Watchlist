@model Watchlist.Data.Utilisateur

@{
    ViewData["Title"] = "Supprimer l'utilisateur";
}

<h1>Suppression de l'utilisateur</h1>
<p>Voulez-vous vraiment supprimer cet utilisateur ?</p>

<ul>
    <li><strong>Email :</strong> @Model.Email</li>
    <li><strong>Nom d'utilisateur :</strong> @Model.UserName</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
